@model Clinical_Trial_with_Audit.Models.VW_Trial

@{
        ViewBag.Title = "Trial_Details";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<style>

     dl {
         border: 3px double #ccc;
         padding: 0.5em;
     }

     dt {
         float: left;
         clear: left;
         width: 100px;
         text-align: right;
         font-weight: bold;
         color: green;
     }
     dd {
         margin: 0 0 0 110px;
         padding: 0 0 0.5em 0;
     }
</style>
<h2>Trial Details</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Trial Number :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trial_No)
        </dd>
        <dt>
            Project Name :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project_Name)
        </dd>
        <dt>
            Project Code :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project_Code)
        </dd>
        <dt>
            Start Date :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start_Date)
        </dd>

        <dt>
            End Date :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End_Date)
        </dd>

        <dt>
            Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            Trial Type :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trial_Type)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Register", "Register", new { id = Model.Trial_No }) |
    @Html.ActionLink("Back to List", "GetAllTrials")
</p>
