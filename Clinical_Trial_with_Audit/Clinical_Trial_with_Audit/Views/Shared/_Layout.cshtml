<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Clinical Trial</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script>
    @if(!Request.IsAuthenticated) {
         @Html.ActionLink("Sign Out", "Login", "Home")
    }
    </script>

</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand">
                        <img class="" src="~/Images/ppdlogo.png" alt="PPD" width="97px">
                    </a>
                    @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                            {
                                //var role = Session["Role"].ToString();
                                if (User.IsInRole("Admin"))
                               {             

                                <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                
                               }

                            }
                            @if (Session["UserName"] != null)
                        {
                            <li><a href="">Welcome @Session["UserName"]</a></li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                        }
                        else
                            {
                            <li>@Html.ActionLink("Login", "Login", "Home")</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <!--footer-->
        <footer class="myfooter navbar-fixed-bottom">
            <!--<div class="row">-->
            @*<div class="col-md-4">
                    <h1>
                        About Us
                    </h1>

                </div>*@
            <!--<div class="col-md-4">
                    <h1>
                        Contact Us
                    </h1>
                    <ul>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Linked in</a></li>
                        <li><a href="#">Instagram</a></li>
                    </ul>
                </div>
            </div>-->
            <div class="subfooter">
                <p>&copy; @DateTime.Now.Year PPD Inc. All Rights Reserved</p>
            </div>
        </footer>
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </div>
</body>
</html>